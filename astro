---
import { useEffect } from 'react';

// Cod pentru a seta metadata personalizată
const title = 'Titlul personalizat';
const description = 'Descrierea ta personalizată pentru SEO';

useEffect(() => {
  // JavaScript pentru redirecționare
  setTimeout(() => {
    window.location.href = 'https://exemplu.ro';
  }, 3000); // opțional, poți seta timpul de așteptare la 0
}, []);
---

<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
</head>

<body>
  <p>Pagina se redirecționează...</p>
</body>
